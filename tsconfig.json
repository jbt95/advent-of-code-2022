{
	"include": ["./**/*.ts"],
	"exclude": ["node_modules", "dist"],
	"compilerOptions": {
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"module": "commonjs",
		"target": "ES2020",
		"removeComments": true,
		"sourceMap": true,
		"incremental": true,
		"strict": true,
		"noImplicitAny": true,
		"noImplicitThis": true,
		"useUnknownInCatchVariables": true,
		"skipLibCheck": true
	}
}
